<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Laboratorios" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/primary_even_more_dark</item>
        <item name="colorPrimaryDark">@color/primary_even_more_dark</item>
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SliderStyle" parent="Widget.MaterialComponents.Tooltip">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/primary_even_more_dark</item>
    </style>

</resources>